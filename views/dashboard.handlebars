{{#if posts.length}}
  <ol class="post-list">
    {{#each posts as |post|}}
      <li>
      {{> post-info post}}
      </li>
    {{/each}}
  </ol>
{{/if}}

<section class="container">
  <div class="new-post-title"><h2>Create New Post</h2></div>
  <div class="form-container">
  <form class="new-post-form">
    <label for="title-input">Title</label>
    <input type="text" id="title-input" />
    <label for="context-input">Content</label>
    <textarea id="content-input" rows="4">
    </textarea>
  </form>
  </div>
</section>


<style>
  .btn-container {
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 200px;
  }

  .btn-container > button {
    font-size: 25px;
    padding-left: 12px;
    padding-right: 12px;
    padding-top: 8px;
    padding-bottom: 8px;
    background-color: rgb(35, 16, 16);
    color: rgb(218, 233, 211);
    border-radius: 5px;
  }
</style>

<div class="btn-container">
  <button type="button" class="new-post-btn">+ New Post</button>
</div>

<script src="/javascript/add-post.js"></script>

